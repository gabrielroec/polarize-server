{
  "name": "polarize-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:server": "tsc -p tsconfig.json",
    "start:server": "node dist/server/index.js",
    "dev": "ts-node --project tsconfig.json server/index.ts",
    "server:dev": "nodemon --exec ts-node --project tsconfig.json server/index.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.46",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "dotenv": "^16.5.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
